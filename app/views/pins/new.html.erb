<body background="/assets/whitetexturebg.png" style="background-repeat:repeat;">

	<div class="row">
		<div class="span6 offset3">
			<div class="box-text">
				<font size="6px">Create Your Job Ad</p></font> <font color="blue" face="HelveticaNeue">**Currently launched in San Francisco Bay area for Tech & Design jobs only</font>
<br>
<br>
				<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  			<%= f.error_notification %>

  			<%= f.full_error :image_file_size, class: "alert alert" %>
  			<%= f.full_error :image_content_type, class: "alert alert" %>

 			<%= f.input :image, label: "Upload beautiful image" %>
 			<%= f.input :title, label: "Job title" %>
    	<%= f.input :description, label: "Job descripton", as: :text, input_html: { rows: "10" }, :placeholder =>"...don't forget to show your company's personality!", :style =>"color:#000000;" %>


  <div class="form-actions">
    <%= f.submit "Post My Job Listing", class: "btn btn-primary" %>
  </div>
  <%= link_to 'Back', pins_path %>
</div>

		<% end %>
