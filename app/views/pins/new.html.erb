<body background="/assets/whitetexturebg.png" style="background-repeat:repeat;">

  <div class="la"> </div>

	<div class="row">
		<div class="span7 offset2">
			<div class="box-text">
				<font size="6px">Create Job Listing:</font>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <font color="white" face="helveticaneue-light" size= "5px" style="background-color: #cccccc;padding: 5px;border-radius: 4px;" face="HelveticaNeue-Light">$75 for 30 days</font> 
<br>
<br>
<br>
				<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  			<%= f.error_notification %>

  			<%= f.full_error :image_file_size, class: "alert alert" %>
  			<%= f.full_error :image_content_type, class: "alert alert" %>

 			<%= f.input :image, label: "Upload Beautiful Image" %>
      <%= f.input :yvideo, label: " or a YouTube Video", :placeholder => "video ID here" %>
 			<%= f.input :title, label: "Job Title" %>
      <%= f.input :location, label: "Location", :placeholder => "'San Francisco' or 'New York'" %>
    	<%= f.input :description, label: "Job Description", as: :text, input_html: { rows: "10" }, :placeholder => "...don't forget to share your company's culture & personality!"  %>


  <div class="form-actions">
    <%= f.submit "Post Job Listing", class: "btn btn-primary btn-custom btn-large" %>
  </div>
  <%= link_to 'Cancel', pins_path %>
</div>
</div>
</div>

		<% end %>
