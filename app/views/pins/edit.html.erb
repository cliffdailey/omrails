        <%= f.input :location, label: "Location" %>
    		<%= f.input :description, label: "Job Description", as: :text, input_html: { rows: "10", :style => 'width: 450px' } %>


  <div class="form-actions">
    <%= f.submit "UPDATE JOB LISTING", class: "btn btn-primary btn-custom btn-large" %>
