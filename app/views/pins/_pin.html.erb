<div class="box">
		<%= link_to (image_tag pin.image), pin %>
	<p class="description">
		<%= pin.description %>
		</p>
	<p class="description">
		
			<font color="#8c7e7e" >by</font> <font color="teal"><%= link_to "#{pin.user.name}", user_path(pin.user) %></font>

			<div id="like_star_<%= pin.id %>">
		<%= render 'pins/star', :pin => pin %>
	</div>	
	</p>
	<% if current_user == pin.user %>
		<p>
			<%= link_to 'Edit', edit_pin_path(pin) %> |
			<%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<%end%>
</div>
