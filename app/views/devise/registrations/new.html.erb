<body background="/assets/whitetexturebg.png" style="background-repeat:repeat;">

<div class="row">
	<div class="span6 offset3">
		<div class="box-text">
		<font size="6px">Start Recruiting on Hyre.</font><br>
		<font color="#999999" face="HelveticaNeue-Light">Registration takes 10 seconds. Maybe less.</font>
		<br>
<br>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, :label=> "Company name" %>
  <%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation, :label=> "Confirm Password" %>

	<div class="form-actions">
  	<%= f.submit "CREATE ACCOUNT", class: "btn btn-primary btn-custom " %>
  </div>
  <%= render "devise/shared/links" %>
</div>
  
<% end %>


